{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "noImplicitUseStrict": true,
    "moduleResolution": "node",
    
    "types": ["typescript-to-lua/language-extensions", "lua-types/jit"]
  },
  "tstl": {
    "luaTarget": "JIT",
    "noHeader": true,
    "noImplicitSelf": true,
    "luaLibImport": "inline",
    "sourceMapTraceback": true,
    //"buildMode": "default",
    //"luaBundleEntry": "src/script.ts",
    //"luaBundle": "output/script.lua"
  }
}